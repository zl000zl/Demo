<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.smartparty.activity.Activity_bm"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:cardCornerRadius="15dp">

        <com.youth.banner.Banner
            android:id="@+id/bm_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:image_scale_type="fit_xy"
            app:indicator_height="10dp"
            app:indicator_width="10dp"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="活动报名"
        android:textSize="15sp"
        android:textColor="#000"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 组 织 者 ："
            android:textColor="#000"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/bm_et2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入单位名称" />
    </LinearLayout>
    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单位地址："
            android:textColor="#000"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/bm_et1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入单位地址" />
    </LinearLayout>
    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系方式："
            android:textColor="#000"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/bm_et3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入联系方式" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="15dp">


        <EditText
            android:padding="10dp"
            android:id="@+id/bm_et4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入你想说的话！！"
            android:background="@null"/>
    </androidx.cardview.widget.CardView>

    <Button
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:id="@+id/bm_btn"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="确定报名"
        android:textColor="#fff"
        android:background="@drawable/style_shape"/>
</LinearLayout>