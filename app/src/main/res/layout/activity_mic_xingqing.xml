<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.smartparty.activity.Mic_xingqing"
    android:orientation="vertical">

    <TextView
        android:padding="10dp"
        android:layout_gravity="center"
        android:id="@+id/mic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="16sp"
        android:textColor="#000"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="200dp"
                app:srcCompat="@drawable/a5" />

            <TextView
                android:padding="5dp"
                android:id="@+id/mic_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/bianji" />

        <EditText
            android:id="@+id/mic_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请评价" />

        <Button
            android:layout_gravity="center"
            android:id="@+id/mic_pl"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="评论"
            android:textColor="#fff"
            android:background="@drawable/style_shape"/>

        <ImageView
            android:id="@+id/mic_more"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/more"
            tools:ignore="VectorDrawableCompat" />
    </LinearLayout>
</LinearLayout>